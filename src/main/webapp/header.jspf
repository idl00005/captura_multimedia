<%@ page contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ page contentType="text/html; charset=UTF-8" %>

<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom text-center align-items-center" style="background-color: #4d5962">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <img class="bi me-2" src="./img/logoblack.png" alt="" width="250" height="80">
    </a>

    <ul class="nav nav-pills">
        <li class="nav-item text-white"><a href="index.xhtml" class="nav-link text-white" aria-current="page">Inicio</a></li>
        <li class="nav-item text-white"><a href="buscaClases.xhtml" class="nav-link text-white" >Consultar clases</a></li>
        <c:choose>
            <c:when test="${not empty sessionScope.loggedInUser}">
                <li class="nav-item text-white"><a href="cuenta.xhtml" class="nav-link text-white">Cuenta</a></li>
            </c:when>
            <c:otherwise>
                <li class="nav-item text-white"><a href="login.xhtml" class="nav-link text-white">Iniciar sesión</a></li>
            </c:otherwise>
        </c:choose>
        <li class="nav-item text-white"><a href="#" class="nav-link text-white"></a></li>
        <c:choose>
            <c:when test="${not empty sessionScope.loggedInUser}">
                <form action="${pageContext.request.contextPath}/logout" method="post">
                    <input type="submit" value="Cerrar sesión" class="btn btn-warning btn-limited-width"/>
                </form>
            </c:when>
            <c:otherwise>
                <li class="nav-item text-white"><a href="eligeSuscripcion.xhtml" class="btn btn-warning" style="margin-right: 20px">INSCRÍBETE</a></li>
            </c:otherwise>
        </c:choose>
    </ul>
</header>
